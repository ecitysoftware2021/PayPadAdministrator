@model PayPlusModels.PaypadActionLog

@{
    ViewBag.Title = "Ejecutar Acción en el Pay +";
}



<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("CreatePaypadActionLog", "Console", new { }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.ACTION_ID)
                @Html.HiddenFor(model => model.DATE_EXECUTE)
                @Html.HiddenFor(model => model.DATE_CREATION)
                @Html.HiddenFor(model => model.DEVICE_PAYPAD_ID)
                @Html.HiddenFor(model => model.PAYPAD_ID)
                @Html.HiddenFor(model => model.STATE)
                @Html.HiddenFor(model => model.USER_ID)

                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Decripción</label>

                        @Html.EditorFor(model => model.DESCRIPTION, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descripción" } })
                        @Html.ValidationMessageFor(model => model.DESCRIPTION, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Fecha de Acción</label>
                        @Html.EditorFor(model => model.DATE_ACTION, new { htmlAttributes = new { @class = "form-control", @placeholder = "Fecha de acción" } })
                        @Html.ValidationMessageFor(model => model.DATE_ACTION, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            }


        </div>
    </div>
    <!--/.col (left) -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            var today = new Date();



            $('#DATE_ACTION').datetimepicker({
                format: 'YYYY-MM-DD HH:mm',
                minDate: '2019-03-13 04:49'
            });
        });
    </script>
}

